@model Cinema.Models.Sala

@{
    ViewBag.Title = "Cadastrar Sala";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="CreateSala" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <label asp-for="Capacidade" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Capacidade" class="form-control" />
                <span asp-validation-for="Capacidade" class="text-danger"></span>
            </div>
            <label asp-for="TamanhoTela" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TamanhoTela" class="form-control" />
                <span asp-validation-for="TamanhoTela" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>